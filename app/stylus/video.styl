&:before
	background-image url(../images/bg/video.jpg)
	background-size cover
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	display block
	content ''
	opacity 0.1

& > .play
	width 800px
	height @width
	opacity 0.05
	position absolute
	top 40px
	left 50%
	margin-left 50px
	path
		fill light-color
		
.inner
	position relative
	padding 90px 0
	perspective 1800px
	
	&.show
		.content
			transform rotateX(0deg)
	.content
		width 80%
		height 700px
		margin auto
		border 1px solid primary-color
		position relative
		transform rotateX(90deg)
		transform-origin center bottom
		transition transform longTransition
			
			
		&:after
			content ''
			position absolute
			top 50%
			height 150px
			margin-top -(@height / 2)
			width 1px
			background-color light-color
			right 100px
			
		
		.text
			padding-left 380px
			padding-top 210px
			
			.h2
				letter-spacing 0.025em
				color primary-color
				position relative
				
				&:before
					width 150px
					position absolute
					height 1px
					background-color light-color
					top 30px
					margin-top -3px
					display block
					left -170px
					content ''
			.p
				color light-color
				width 440px
				
				&:before
					top 12px
					width 45px
					position absolute
					height 4px
					background-color primary-color
					display block
					left -65px
					content ''
			.button
				width 310px
				padding 20px 0
				text-align center
				color light-color
				border 2px solid light-color
				text-transform uppercase
				letter-spacing 0.2em
				font-weight bold
				box-sizing border-box
				position relative
				display flex
				justify-content center
				align-items center
				cursor pointer
				
				& > div
					font-size 14px
					line-height @font-size
					padding-left 20px

				svg
					width 25px
					height @width
					
					path
						fill light-color

				