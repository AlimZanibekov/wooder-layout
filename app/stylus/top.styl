hederlink = @block {
	font-size 15px
	line-height 15px
	text-transform uppercase
	font-weight bold
	letter-spacing 0.05em
	color light-color
	opacity 0.5
}

.share
	position absolute
	bottom -30px
	right 30px
	cursor pointer
	display block
	
	svg
		display block
		path
			fill primary-color
header
	position relative
	
	.menu
		position absolute
		left 22px
		top 29px
		padding 5px
		display flex
		align-items center
		cursor pointer
		
		.burger
			burger-border = 1px solid primary-color
			border-top burger-border
			border-bottom burger-border
			height hg = 20px
			width 33px
			position relative
			
			&:before
				position absolute
				content ''
				width 100%
				height 1px
				top (hg / 2) - @height
				background-color primary-color
			
		.text
			{hederlink}
			height 15px
			margin-left 12px
	
	.right
		position absolute
		right 33px
		top 33px
		display flex
		align-items center
		
		.info
			margin-right 50px
			width 22px
			height 22px
			box-sizing border-box
			box-shadow: 0px 0px 0px 1.5px light-color
			opacity 0.3
			color light-color
			text-align center
			font-size 19px
			line-height 22px
			border-radius 13px
			cursor pointer
		
		.lang 
			height 15px
			position relative
			
			select
				background-color transparent
				border none
				-webkit-appearance none
				height 15px
				padding-right 10px
				{hederlink}
				
				option
					color dark-color

			&:before
				content ''
				position absolute
				right 0
				top 7px
				width 0
				height 0
				border-style solid
				border-width 4px 3px 0 3px
				border-color primary-color transparent transparent transparent
	
	.mid
		width central-width
		margin 0 auto
		box-sizing border-box
		display flex
		flex-direction row
		padding-left 355px
		
		.logo
			text-transform uppercase
			font-weight bold
			letter-spacing 0.3em
			font-size 36px
			line-height 36px
			margin-top 25px
			color light-color
			position relative
			
			&:before
				content ''
				position absolute
				top 50%
				left 44px
				margin-top -2px
				width 64px
				height 4px
				background-color primary-color
		.nav
			display flex
			margin-top: 35px
			a
				{hederlink}
				text-decoration none
				margin-left 80px
				display block
				transition opacity standartTransition
				&:hover
					opacity 0.8

.middle-container
	width 1190px
	margin 0 auto
	padding-left 355px
	padding-top 280px
	box-sizing border-box
	position relative
	

	.left-num
		position absolute
		left 0
		top 250px
		
		.line
			background-color primary-color
			height 50px
			width 4px
			margin 0 auto
		
		.number
			margin-top 20px
			color primary-color
			font-size 53px
			font-weight bold
			letter-spacing 0.1em
			writing-mode tb-rl
			
		.points
			padding-top 40px
			div
				margin 0 auto
				width 10px
				height 10px
				border-radius 10px
				background-color #303030
				margin-top 40px
				
				for i in 1..4
					{s('&:nth-child(%d)', i)}
						animation s('pulse%d', i - 1) 8s infinite
						
					
	.right-text
		position absolute
		right 0
		top 300px
		color primary-color
		opacity 0.2
		writing-mode tb-rl
		text-transform uppercase
		font-weight bold
		font-size 14px
		letter-spacing 0.3em

	.middle
		.name-big
			font-weight bold
			color primary-color
			font-size 100px
			letter-spacing 0.2em
			text-transform uppercase
			line-height: 100px;
			
		.button
			width 310px
			padding 20px 0
			text-align center
			font-size 14px
			color light-color
			border 2px solid light-color
			text-transform uppercase
			letter-spacing 0.2em
			font-weight bold
			box-sizing border-box
			position relative
			line-height 14px
			
		.button.learn-more
			margin-top 50px
			cursor pointer
			transition background-color standartTransition

			&:hover
				background-color rgba(255,255,225,0.1)
				
		.vertical
			animation pulse 2s infinite
			
			.mouse
				display block
				margin-top 70px
			.line
				display block
				margin-top 20px
				margin-bottom 20px
				margin-left 4px
			.text
				margin-left 1px
				color light-color
				opacity 0.1
				text-transform uppercase
				line-height 14px
				letter-spacing 0.1em
				writing-mode tb-rl
				font-weight bold
				font-size 14px

@keyframes pulse {
	0% {
		transform: translate(0, 0); 
	}
	50% {
		transform: translate(0, 10px); 
	}
	100% {
		transform translate(0, 0)
	} 
}

for q in 0..3
	$keyframe-name = s('pulse%d', q)
	@keyframes {$keyframe-name}
		for i in 0..5
			{20%* i}
				if (q + 1) == i
					background-color primary-color
				else
					background-color #303030